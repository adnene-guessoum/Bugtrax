{
  "name": "backend-bugtrax",
  "version": "1.0.0",
  "description": "node.js backend pour application de note de lectures",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "start": "node dist/src/app.js",
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc -p .",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
